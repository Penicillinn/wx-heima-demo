/* pages/search/search.wxss */
page {
  background-color: #f1efef;
}
.serach-header {
  display: flex;
  padding: 30rpx;
}
.serach-header input {
  flex: 1;
  background-color: #fff;
  padding: 10rpx 0;
}
.serach-header button {
  margin: 0;
  padding: 0;
  border-radius: 10rpx;
  background-color: #fff;
}
.search-item {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #eaeaea;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #666;
}
